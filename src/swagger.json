{
  "swagger": "2.0",
  "info": {
    "description": "This is the jz-gamification-engine API. The endpoints below allow clients to define goals, report goal-related activity, and fetch user progress towards goal completion.",
    "version": "1.0.0",
    "title": "jz-gamification-engine"
  },
  "basePath": "/v1",
  "tags": [
    {
      "name": "goal",
      "description": "Objectives that entities can achieve. Often called badges or trophies"
    },
    {
      "name": "event",
      "description": "Activities that contributes towards achieving a goal"
    },
    {
      "name": "entity",
      "description": "Things that can make progress towards achieving goals. Most often a system's users"
    },
    {
      "name": "health",
      "description": "Simple application health check"
    }
  ],
  "schemes": [
    "https",
    "http"
  ],
  "paths": {
    "/goals": {
      "post": {
        "tags": [
          "goal"
        ],
        "summary": "Create a new goal",
        "description": "Create a new goal for entities to achieve",
        "operationId": "createGoal",
        "consumes": [
          "application/json"
        ],
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "in": "body",
            "name": "goal",
            "description": "Goal object defining the objective to achieve",
            "required": true,
            "schema": {
              "$ref": "http://localhost:3000/schemas/goal.schema.json"
            }
          }
        ],
        "responses": {
          "405": {
            "description": "Invalid input"
          }
        }
      }
    },
    "/goals/{goalId}": {
      "get": {
        "tags": [
          "goal"
        ],
        "summary": "Get goal by id",
        "description": "Fetch goal by id",
        "operationId": "findPetsByStatus",
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "goalId",
            "in": "path",
            "description": "Goal id",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "successful operation",
            "schema": {
              "type": "object",
              "items": {
                "$ref": "http://localhost:3000/schemas/goal.schema.json"
              }
            }
          },
          "404": {
            "description": "Not found"
          }
        }
      }
    }
  }
}